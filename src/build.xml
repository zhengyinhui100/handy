<project name="handy.build" default="build" basedir=".">
	<description>Handy Build File</description>

	<property name="project.name" value="handy"/>
	<property name="project.dir" location="."/>
	<property name="js.dir" location="./"/>
	<property name="css.dir" location="../css"/>
	<import file="../tools/common-build.xml"/>


	<target name="base">
		<concat destfile="${project.name}-pkg.js"
            encoding="${charset}"
            outputencoding="${charset}">

			<!-- base -->
			<path path="base/base.js"/>
			<path path="base/Object.js"/>
			<path path="base/Date.js"/>
			<path path="base/Browser.js"/>
			<path path="base/String.js"/>
			<path path="base/Cookie.js"/>
			<path path="base/Util.js"/>
			<path path="base/Function.js"/>
			<path path="base/Debug.js"/>
			<path path="base/Loader.js"/>
			<path path="base/Template.js"/>
			<path path="base/HashChange.js"/>
			<path path="base/Support.js"/>
			<path path="base/adapt.js"/>

		</concat>
	</target>

	<!--  component -->
	<target name="component">
		<concat destfile="${project.name}-pkg.js"
	            encoding="${charset}"
	            outputencoding="${charset}"
				append="true">
			
			<path path="component/Component.js"/>
			<path path="component/TreeMenu.js"/>
			<path path="component/AccordionMenu.js"/>
			<path path="component/TipsBox.js"/>

		</concat>
	</target>
	
	<!--  module -->
	<target name="module">
		<concat destfile="${project.name}-pkg.js"
	            encoding="${charset}"
	            outputencoding="${charset}"
				append="true">

		    <path path="module/AbstractModule.js"/>
		    <path path="module/AbstractNavigator.js"/>
		    <path path="module/History.js"/>
			<path path="module/ModuleManager.js"/>

		</concat>
	</target>


	<target name="clean">
		<delete>
			<fileset dir="${project.dir}" includes="${package.js}"/>
		</delete>

	</target>
	
	<target name="package.all" depends="base,component,module">
	</target>
	
	<target name="build" depends="package.all,common.build.js,clean">
	</target>

</project>
